{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "properties": {
    "bookmarks": {
      "description": "Controls the behaviour of the bookmark finding algorythm.",
      "default": {
        "exclude": [],
        "search_depth": 100
      },
      "allOf": [
        {
          "$ref": "#/definitions/BookmarkConfig"
        }
      ]
    },
    "module": {
      "description": "Modules that will be rendered.",
      "default": [
        {
          "bg_color": null,
          "color": "Blue",
          "symbol": "󱗆 ",
          "type": "Symbol"
        },
        {
          "behind_symbol": "⇡",
          "bg_color": null,
          "color": "Magenta",
          "max_bookmarks": null,
          "max_length": null,
          "separator": " ",
          "surround_with_quotes": true,
          "type": "Bookmarks"
        },
        {
          "bg_color": null,
          "color": null,
          "empty_text": "(no description set)",
          "max_length": 24,
          "surround_with_quotes": true,
          "type": "Commit"
        },
        {
          "conflict": {
            "bg_color": null,
            "color": "Red",
            "disabled": false,
            "text": "(CONFLICT)"
          },
          "divergent": {
            "bg_color": null,
            "color": "Cyan",
            "disabled": false,
            "text": "(DIVERGENT)"
          },
          "empty": {
            "bg_color": null,
            "color": "Yellow",
            "disabled": false,
            "text": "(EMPTY)"
          },
          "hidden": {
            "bg_color": null,
            "color": "Yellow",
            "disabled": false,
            "text": "(HIDDEN)"
          },
          "immutable": {
            "bg_color": null,
            "color": "Yellow",
            "disabled": false,
            "text": "(IMMUTABLE)"
          },
          "separator": " ",
          "type": "State"
        },
        {
          "added_lines": {
            "bg_color": null,
            "color": "Green",
            "prefix": "+",
            "suffix": ""
          },
          "bg_color": null,
          "changed_files": {
            "bg_color": null,
            "color": "Cyan",
            "prefix": "",
            "suffix": ""
          },
          "color": "Magenta",
          "removed_lines": {
            "bg_color": null,
            "color": "Red",
            "prefix": "-",
            "suffix": ""
          },
          "template": "[{changed} {added}{removed}]",
          "type": "Metrics"
        }
      ],
      "type": "array",
      "items": {
        "$ref": "#/definitions/ModuleConfig"
      }
    },
    "module_separator": {
      "description": "Text that will be printed between each Module.",
      "default": " ",
      "type": "string"
    },
    "reset_color": {
      "description": "Controls whether color gets reset at the end.",
      "default": true,
      "type": "boolean"
    },
    "timeout": {
      "description": "Timeout after wich the process is teminated.",
      "default": null,
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0.0
    }
  },
  "definitions": {
    "BookmarkConfig": {
      "type": "object",
      "properties": {
        "exclude": {
          "description": "Exclude certain bookmarks from the search (supports globs)",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "search_depth": {
          "description": "Controls how far we are looking back to find bookmarks.",
          "default": 100,
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        }
      }
    },
    "Color": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "Black",
            "Red",
            "Green",
            "Yellow",
            "Blue",
            "Magenta",
            "Cyan",
            "White",
            "BrightBlack",
            "BrightRed",
            "BrightGreen",
            "BrightYellow",
            "BrightBlue",
            "BrightMagenta",
            "BrightCyan",
            "BrightWhite"
          ]
        },
        {
          "type": "object",
          "required": [
            "TrueColor"
          ],
          "properties": {
            "TrueColor": {
              "type": "object",
              "required": [
                "b",
                "g",
                "r"
              ],
              "properties": {
                "b": {
                  "type": "integer",
                  "format": "uint8",
                  "minimum": 0.0
                },
                "g": {
                  "type": "integer",
                  "format": "uint8",
                  "minimum": 0.0
                },
                "r": {
                  "type": "integer",
                  "format": "uint8",
                  "minimum": 0.0
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Metric": {
      "type": "object",
      "properties": {
        "bg_color": {
          "description": "Background Color",
          "anyOf": [
            {
              "$ref": "#/definitions/Color"
            },
            {
              "type": "null"
            }
          ]
        },
        "color": {
          "description": "Text Color",
          "anyOf": [
            {
              "$ref": "#/definitions/Color"
            },
            {
              "type": "null"
            }
          ]
        },
        "prefix": {
          "default": "",
          "type": "string"
        },
        "suffix": {
          "default": "",
          "type": "string"
        }
      }
    },
    "ModuleConfig": {
      "description": "A module that prints some info about the current jj repo",
      "oneOf": [
        {
          "description": "Prints an indicator.",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "bg_color": {
              "description": "Background Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "color": {
              "description": "Text Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "symbol": {
              "description": "Text that will be rendered between each bookmark.",
              "default": "󱗆 ",
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "Symbol"
              ]
            }
          }
        },
        {
          "description": "Prints information about bookmarks in the working copies ancestors.",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "behind_symbol": {
              "description": "A suffix that will be printed when the given bookmark is behing the working copy.",
              "default": "⇡",
              "type": [
                "string",
                "null"
              ],
              "maxLength": 1,
              "minLength": 1
            },
            "bg_color": {
              "description": "Background Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "color": {
              "description": "Text Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "max_bookmarks": {
              "description": "Maximum amout of bookmarks that will be rendered.",
              "type": [
                "integer",
                "null"
              ],
              "format": "uint",
              "minimum": 0.0
            },
            "max_length": {
              "description": "Maximum length the bookmark name will be truncated to.",
              "type": [
                "integer",
                "null"
              ],
              "format": "uint",
              "minimum": 0.0
            },
            "separator": {
              "description": "Text that will be rendered between each bookmark.",
              "default": " ",
              "type": "string"
            },
            "surround_with_quotes": {
              "description": "Do not render quotes around bookmark names",
              "default": true,
              "type": "boolean"
            },
            "type": {
              "type": "string",
              "enum": [
                "Bookmarks"
              ]
            }
          }
        },
        {
          "description": "Prints the working copies commit text",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "bg_color": {
              "description": "Background Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "color": {
              "description": "Text Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "empty_text": {
              "description": "The text that should be printed when the current revision has no description yet",
              "default": "(no description set)",
              "type": "string"
            },
            "max_length": {
              "description": "Maximum length the commit text will be truncated to.",
              "default": 24,
              "type": [
                "integer",
                "null"
              ],
              "format": "uint",
              "minimum": 0.0
            },
            "surround_with_quotes": {
              "description": "Do not render quotes around the description",
              "default": true,
              "type": "boolean"
            },
            "type": {
              "type": "string",
              "enum": [
                "Commit"
              ]
            }
          }
        },
        {
          "description": "Prints a warning if the working copy contains any conflicts, is divergent or hidden",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "conflict": {
              "description": "Controls how the conflict warning will be rendered.",
              "default": {
                "bg_color": null,
                "color": "Red",
                "disabled": false,
                "text": "(CONFLICT)"
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Status"
                }
              ]
            },
            "divergent": {
              "description": "Controls how the divergence warning will be rendered.",
              "default": {
                "bg_color": null,
                "color": "Cyan",
                "disabled": false,
                "text": "(DIVERGENT)"
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Status"
                }
              ]
            },
            "empty": {
              "description": "Controls how the divergence warning will be rendered.",
              "default": {
                "bg_color": null,
                "color": "Yellow",
                "disabled": false,
                "text": "(EMPTY)"
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Status"
                }
              ]
            },
            "hidden": {
              "description": "Controls how the immutable warning will be rendered.",
              "default": {
                "bg_color": null,
                "color": "Yellow",
                "disabled": false,
                "text": "(HIDDEN)"
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Status"
                }
              ]
            },
            "immutable": {
              "description": "Controls how the empty warning will be rendered.",
              "default": {
                "bg_color": null,
                "color": "Yellow",
                "disabled": false,
                "text": "(IMMUTABLE)"
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Status"
                }
              ]
            },
            "separator": {
              "description": "Text that will be printed between each Warning.",
              "default": " ",
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "State"
              ]
            }
          }
        },
        {
          "description": "Prints the amount of changes in the working copy",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "added_lines": {
              "description": "Controlls how the number of added lines is rendered.",
              "default": {
                "bg_color": null,
                "color": "Green",
                "prefix": "+",
                "suffix": ""
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Metric"
                }
              ]
            },
            "bg_color": {
              "description": "Background Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "changed_files": {
              "description": "Controlls how the number of changed files is rendered.",
              "default": {
                "bg_color": null,
                "color": "Cyan",
                "prefix": "",
                "suffix": ""
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Metric"
                }
              ]
            },
            "color": {
              "description": "Text Color",
              "anyOf": [
                {
                  "$ref": "#/definitions/Color"
                },
                {
                  "type": "null"
                }
              ]
            },
            "removed_lines": {
              "description": "Controlls how the number of removed lines is rendered.",
              "default": {
                "bg_color": null,
                "color": "Red",
                "prefix": "-",
                "suffix": ""
              },
              "allOf": [
                {
                  "$ref": "#/definitions/Metric"
                }
              ]
            },
            "template": {
              "description": "Controls how the changes are rendered, use {added}, {removed} and {changed} to render the number of changes.",
              "default": "[{changed} {added}{removed}]",
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "Metrics"
              ]
            }
          }
        }
      ]
    },
    "Status": {
      "type": "object",
      "required": [
        "text"
      ],
      "properties": {
        "bg_color": {
          "description": "Background Color",
          "anyOf": [
            {
              "$ref": "#/definitions/Color"
            },
            {
              "type": "null"
            }
          ]
        },
        "color": {
          "description": "Text Color",
          "anyOf": [
            {
              "$ref": "#/definitions/Color"
            },
            {
              "type": "null"
            }
          ]
        },
        "disabled": {
          "description": "Do not render this warning",
          "default": false,
          "type": "boolean"
        },
        "text": {
          "description": "The text that should be printed when the working copy has the given state.",
          "type": "string"
        }
      }
    }
  }
}
